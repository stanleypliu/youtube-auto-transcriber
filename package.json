{
  "name": "youtube-auto-transcriber",
  "displayName": "Youtube auto transcriber",
  "version": "0.0.1",
  "description": "Real time transcription for any language in a YouTube video  - write to a file ",
  "author": "Stanley Liu",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "manifest_version": 3,
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabCapture",
      "activeTab",
      "downloads",
      "storage",
      "notifications"
    ]
  },
  "plasmo": {
    "contentScripts": {
      "matches": ["*://*.youtube.com/*"]
    }
  }
}
